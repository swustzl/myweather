<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myweather.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/th_weather"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
      
        <activity android:name=".activity.ChooseAreaActivity">
            <intent-filter >
               <action android:name="android.intent.action.MAIN"/>
               <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.myweather.app.activity.ShowWeatherActivity"></activity>
        
        <service android:name="com.myweather.app.service.AutoUpdateWeatherService"></service>
        
        <receiver android:name="com.myweather.app.receiver.AutoUpdateWeatherReceiver"></receiver>
    </application>

</manifest>
